# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/siroy-paint-shop
DB_NAME=siroy-paint-shop

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Payment Gateway Configuration - BCA
BCA_API_URL=https://sandbox.bca.co.id/api
BCA_CLIENT_ID=your-bca-client-id
BCA_CLIENT_SECRET=your-bca-client-secret
BCA_API_KEY=your-bca-api-key

# Payment Gateway Configuration - Mandiri
MANDIRI_API_URL=https://developers.bankmandiri.co.id/api
MANDIRI_CLIENT_ID=your-mandiri-client-id
MANDIRI_CLIENT_SECRET=your-mandiri-client-secret
MANDIRI_API_KEY=your-mandiri-api-key

# Payment Gateway Configuration - BNI
BNI_API_URL=https://apibni.bni.co.id/api
BNI_CLIENT_ID=your-bni-client-id
BNI_CLIENT_SECRET=your-bni-client-secret
BNI_API_KEY=your-bni-api-key

# QRIS Configuration
QRIS_API_URL=https://qris.id/api
QRIS_MERCHANT_ID=your-qris-merchant-id
QRIS_API_KEY=your-qris-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Webhook URLs
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-key
BCA_WEBHOOK_URL=/api/webhooks/bca
MANDIRI_WEBHOOK_URL=/api/webhooks/mandiri
BNI_WEBHOOK_URL=/api/webhooks/bni
QRIS_WEBHOOK_URL=/api/webhooks/qris
